{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "airbnb-typescript"
    ],
    "plugins": ["@typescript-eslint"],
    "parserOptions": {
        "project": "./tsconfig.eslint.json"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        "indent": ["error", 2],
        "max-len": "off",
        "lines-between-class-members": "off",
        "@typescript-eslint/lines-between-class-members": ["error", "never", {"exceptFirstSingleLine":  true}]
    }
}
