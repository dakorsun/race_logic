{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "App": ["src/App"],
      "Pages/*": ["src/Pages/*"]
    },
    "plugins": [{
      "name": "typescript-plugin-css-modules"
    }]
  },
  "exclude": [
    "node_modules"
  ]
}
